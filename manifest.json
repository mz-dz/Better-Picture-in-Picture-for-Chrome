{
  "manifest_version": 3,
  "name": "better Picture-in-Picture",
  "version": "1.0",
  "description": "Adds forward and backward controls to Picture-in-Picture.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Open in better PiP"
  }
}